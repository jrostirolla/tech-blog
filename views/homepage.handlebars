
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2 id="postTitle">
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/blogpost/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>
      <!-- Pass needed_funding value to the helper function -->
      <span class="postBody">{{post.body}}</span>
    </p>
    <p id="createdBy">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
</div>
{{/each}}
